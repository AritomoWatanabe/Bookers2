<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= "error" +" "+ message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>
	<p>Title</p>
	<p class= "text-field"><%= f.text_field :title %></p>
	<p>Body</p>
	<p class= "text-area"><%= f.text_area :body %></p>

	<p class= "text-update"><%= f.submit 'Update Book' %>
<% end %>

<!-- Edit|Backのボタンを作る -->
<%= link_to "show", book_path(@book.id) %> |
<%= link_to "Back", books_path %>
